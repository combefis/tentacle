<Home>:
  BoxLayout:
    orientation: "vertical"
    BoxLayout:
      size_hint_y: 4
      Label:
        text: "Welcome"
    BoxLayout:
      size_hint_y: 0.4
      orientation: "horizontal"
      BoxLayout:
        Button:
          text: "Resistor"
          on_press: root.manager.transition.direction = 'right'
          on_press: root.manager.current = 'resistor'
      BoxLayout:
        Button:
          text: "Resistor"
          on_press: root.manager.transition.direction = 'left'
          on_press: root.manager.current = 'resistor'

<Resistor>:
  resistance_input: resistance
  band1_spr: band1
  band2_spr: band2
  multi_spr: multi
  BoxLayout:
    orientation: "vertical"
    BoxLayout:
      orientation: "horizontal"
      size_hint_y: 1
      Spinner:
        id: band1
        values: root.colors
        text: "Black"
        on_text: root.calculateRes()
      Spinner:
        id: band2
        values: root.colors
        text: "Black"
        on_text: root.calculateRes()
      Spinner:
        id: multi
        values: root.colors
        text: "Black"
        on_text: root.calculateRes()
    BoxLayout:
      size_hint_y: 3
      TextInput:
        id: resistance
        text: ""
        on_text_validate: root.calculateBand()
        multiline: False
    BoxLayout:
      size_hint_y: 0.4
      orientation: "horizontal"
      BoxLayout:
        Button:
          text: "Home"
          on_press: root.manager.transition.direction = 'right'
          on_press: root.manager.current = 'home'
      BoxLayout:
        Button:
          text: "Home"
          on_press: root.manager.transition.direction = 'left'
          on_press: root.manager.current = 'home'